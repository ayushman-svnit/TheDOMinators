            </div>
            <a href="/parkings/owner/<%= owner._id %>/<%= parking._id %>">Details</a>
        </div><br>
    <% } %>
    <% } %>
        <hr>
        <br>
        <b>Create Parking: </b><a href="/parkings/owner/<%= owner._id %>/new">Click here</a>
