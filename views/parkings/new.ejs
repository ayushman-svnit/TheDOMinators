<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>New Form</title>
</head>

<body>

  <h2>Add a New Parking Lot</h2>

  <form action="/parkings/owner/new" method="POST">

    <div>
      <label for="name">Parking Name</label><br>
      <input type="text" id="name" name="name" required>
    </div>
    <br>

    <div>
      <label for="location">Address / Location</label><br>
      <input type="text" id="location" name="location" required>
    </div>
    <br>

    <div>
      <label for="totalSlots">Total Slots</label><br>
      <input type="number" id="totalSlots" name="totalSlots" min="1" required>
    </div>
    <br>

    <div>
      <label for="availableSlots">Available Slots (now)</label><br>
      <input type="number" id="availableSlots" name="availableSlots" min="0" required>
    </div>
    <br>

    <div>
      <label for="rate">Rate (â‚¹ / hour)</label><br>
      <input type="number" id="rate" name="rate" min="0" step="0.01" required>
    </div>
    <br>

    <div>
      <label for="openTime">Opening Time</label><br>
      <input type="time" id="openTime" name="openTime" required>
    </div>
    <br>

    <div>
      <label for="closeTime">Closing Time</label><br>
      <input type="time" id="closeTime" name="closeTime" required>
    </div>
    <br>

    <button type="submit">Create Parking</button>
    <a href="/parkings">Cancel</a>
  </form>

  <script>
    document.getElementById('totalSlots').addEventListener('input', e => {
      const availableSlots = document.getElementById('availableSlots');
      availableSlots.value = e.target.value;
      availableSlots.max = e.target.value;
    });
  </script>

</body>

</html>